<h1>Realtime Products</h1>
<div>
  <form id="addProductForm">
    <input name="title" placeholder="title" required />
    <input name="description" placeholder="description" required />
    <input name="code" placeholder="code" required />
    <input name="price" placeholder="price" type="number" step="0.01" required />
    <input name="status" placeholder="status" type="text" value="true" />
    <input name="stock" placeholder="stock" type="number" value="0" />
    <input name="category" placeholder="category" required />
    <input name="thumbnails" placeholder="thumbnails csv" />
    <button type="submit">Agregar producto (via socket)</button>
  </form>
</div>

<hr />

<div>
  <h2>Productos</h2>
  <ul id="productsList">
    {{#each products}}
      <li data-id="{{this.id}}">
        <strong>{{this.title}}</strong> — ${{this.price}} — Stock: {{this.stock}}
        <button class="deleteBtn" data-id="{{this.id}}">Eliminar</button>
      </li>
    {{/each}}
  </ul>
</div>

<script src="/js/realtime.js"></script>
